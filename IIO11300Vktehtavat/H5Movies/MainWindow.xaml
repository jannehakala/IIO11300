<Window x:Class="H5Movies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H5Movies"
        mc:Ignorable="d"
        Title="Valikko" Height="150" Width="370" FontFamily="Showcard Gothic">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,20">Elokuvagalleria</TextBlock>
            <Button x:Name="btnOpenMovies1" Content="Elokuvagalleria 1" Margin="0,0,0,5" Click="btnOpenMovies1_Click"></Button>
            <Button x:Name="btnOpenMovies2" Content="Elokuvagalleria 2" Margin="0,0,0,5" Click="btnOpenMovies2_Click"></Button>
            <Button x:Name="btnClose" Content="Sulje" Click="btnClose_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
