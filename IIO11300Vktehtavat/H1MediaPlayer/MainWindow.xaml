<Window x:Class="H1MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H1MediaPlayer"
        mc:Ignorable="d"
        Title="Media Player" Height="350" Width="500">
    <Grid>
        <Button x:Name="btnPlay"
                Content="Toista"
                HorizontalAlignment="Left"
                Margin="10,10,0,20" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="btnPause"
                Content="Pause"
                HorizontalAlignment="Left"
                Margin="90,10,0,20" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="btnStop"
                Content="Pysäytä"
                HorizontalAlignment="Left"
                Margin="170,10,0,20" VerticalAlignment="Bottom" Width="75"/>
    </Grid>
</Window>
