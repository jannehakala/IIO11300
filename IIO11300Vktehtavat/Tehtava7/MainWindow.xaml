<Window x:Class="Tehtava7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7"
        mc:Ignorable="d"
        Title="Password strength checker" FontSize="14" Height="240" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock >Password to check:</TextBlock>
            <TextBox x:Name="txtTextToCheck" TextChanged="txtTextToCheck_TextChanged"></TextBox>
            <TextBlock x:Name="tbCharCount">...</TextBlock>
            <TextBlock x:Name="tbUpperCaseCount">...</TextBlock>
            <TextBlock x:Name="tbLoverCaseCount">...</TextBlock>
            <TextBlock x:Name="tbNumberCount">...</TextBlock>
            <TextBlock x:Name="tbSpecialCharCount">...</TextBlock>
            <TextBlock x:Name="tbResult" FontSize="50" Background="#FF9C9A9A">give password</TextBlock>
        </StackPanel>
    </Grid>
</Window>
